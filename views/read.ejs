<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="w-full h-screen mt-3 text-black p-10 ">
    <a class="text-blue-500  mb-5" href="/">Back to home</a>
    <h1 class="text-3xl mb-3">All Users</h1>
<div class="user flex gap-3 flex-wrap" >
  <% users.forEach(function(user){  %>
    <div class="user w-72 p-4 bg-blue-200 rounded-lg">
      <div class="w-full h-72 rounded-lg bg-zinc-700 overflow-hidden">
        <img class="w-full h-full object-cover object-center" src="<%= user.image %>">
      </div>
      <h3 class="texl-xl mt-2 "><%= user.name %></h3>
      <h5 class="text-zince-900"><%= user.email %></h5>
      <div class="flex gap-3 mt-5">
        <a class="text-blue-700" href="/edit/<%= user._id %>">Edit user</a>
        <a class="text-red-500" href="/delete/<%= user._id %>">Delete user</a>
      </div>
      

    </div>

  
  
  <% }) %>


  </div>



  </div>
  </div>
  

</body>
</html>